<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_gc_mp_cu_shop_by_category_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fontFamily="@font/poppins_semi_bold"
        android:gravity="start|center"
        android:layout_marginTop="@dimen/_12sdp"
        android:text="@string/gc_mp_shop_by_category"
        android:textColor="@color/ar_filter_title_text_color"
        android:textSize="@dimen/_12sdp"
        android:visibility="visible"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_gc_mp_cu_category_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/_4sdp"
        android:layout_marginBottom="@dimen/_12sdp"
        android:background="@color/white"
        android:visibility="visible"/>

    <LinearLayout
        android:id="@+id/lay_gc_mp_data_empty"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/_110sdp"
            android:layout_height="@dimen/_70sdp"
            android:layout_marginTop="@dimen/_50sdp"
            android:background="@drawable/ic_shopping_cart_supermarket"
            android:scaleType="fitXY"/>

        <TextView
            android:id="@+id/tv_gc_mp_data_empty_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_regular"
            android:layout_marginTop="@dimen/_21sdp"
            android:gravity="center"
            android:background="@color/white"
            android:text="@string/products_not_available_in_this_store"
            android:textColor="@color/grey_900"
            android:textSize="@dimen/_11sdp"
            android:visibility="visible"/>

    </LinearLayout>




</LinearLayout>
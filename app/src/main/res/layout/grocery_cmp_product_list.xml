<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/_120sdp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="@dimen/_4sdp"
    android:layout_marginEnd="@dimen/_2sdp"
    android:layout_marginBottom="@dimen/_3sdp"
    android:background="@color/white"
    android:orientation="vertical"
    android:id="@+id/lay_gc_list_pl_row">

    <FrameLayout
        android:layout_width="@dimen/_106sdp"
        android:layout_height="@dimen/_116sdp"
        android:layout_gravity="center|top"
        android:layout_margin="@dimen/_3sdp"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/bg_gc_l_p_image"
        app:cardCornerRadius="@dimen/_8sdp">

        <ImageView
            android:id="@+id/iv_gc_l_pl_image"
            android:layout_width="match_parent"
            android:layout_margin="@dimen/_3sdp"
            android:layout_height="match_parent"
            android:contentDescription="@string/image"
            android:scaleType="fitXY"
            android:visibility="visible"/>


    </FrameLayout>


    <TextView
        android:id="@+id/tv_gc_l_pl_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_regular"
        android:layout_marginLeft="@dimen/_8sdp"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginRight="@dimen/_8sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        android:gravity="start|center"
        android:maxLines="2"
        android:ellipsize="end"
        android:textColor="@color/home_session_prefix_color"
        android:textSize="@dimen/_9sdp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start|center"
        android:layout_marginTop="@dimen/_1sdp"
        android:layout_marginBottom="@dimen/_2sdp"
        android:layout_marginLeft="@dimen/_8sdp"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginRight="@dimen/_8sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_gc_l_pl_special_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_semi_bold"
            android:gravity="start|center"
            android:textColor="@color/home_session_prefix_color"
            android:textSize="@dimen/_9sdp" />

        <TextView
            android:id="@+id/tv_gc_l_pl_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_regular"
            android:layout_marginStart="@dimen/_4sdp"
            android:gravity="start|center"
            android:textColor="@color/home_session_prefix_color"
            android:textSize="@dimen/_8sdp" />


    </LinearLayout>





</LinearLayout>
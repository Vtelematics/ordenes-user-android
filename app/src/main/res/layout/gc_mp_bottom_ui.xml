<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_gc_mp_bu_shop_by_product_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fontFamily="@font/poppins_semi_bold"
        android:gravity="start|center"
        android:layout_marginTop="@dimen/_12sdp"
        android:drawableEnd="@drawable/svg_arrow_forward_24dp"
        android:text="@string/gc_mp_featured_products"
        android:textColor="@color/ar_filter_title_text_color"
        android:textSize="@dimen/_12sdp"
        android:visibility="visible"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_gc_mp_bu_product_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/_4sdp"
        android:layout_marginBottom="@dimen/_12sdp"
        android:background="@color/white"
        android:visibility="visible"/>



</LinearLayout>
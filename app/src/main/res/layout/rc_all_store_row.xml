<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/_4sdp"
    android:layout_marginTop="@dimen/_4sdp"
    android:layout_marginEnd="@dimen/_6sdp"
    android:layout_marginBottom="@dimen/_3sdp"
    android:background="@color/white"
    app:cardCornerRadius="@dimen/_4sdp">
    <!--android:layout_height="@dimen/_115sdp"-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_90sdp"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:background="@color/white">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/iv_ar_restaurant_image"
                    android:layout_width="@dimen/_90sdp"
                    android:layout_height="@dimen/_90sdp"
                    android:contentDescription="@string/image"
                    android:scaleType="fitXY"
                    android:visibility="visible"
                    app:shapeAppearanceOverlay="@style/ImageView.Corner" />

                <LinearLayout
                    android:id="@+id/lay_ar_restaurant_image"
                    android:layout_width="@dimen/_90sdp"
                    android:layout_height="@dimen/_90sdp"
                    android:background="@drawable/bg_ar_vendor_disable"
                    android:orientation="vertical"
                    android:visibility="gone" />
                <!--  android:background="@color/transparent_black_75"-->

                <TextView
                    android:id="@+id/tv_ar_restaurant_image_over_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/poppins_semi_bold"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_11sdp"
                    android:visibility="visible" />


            </FrameLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/_3sdp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/_8sdp"
                        android:gravity="center|start"
                        android:orientation="vertical">
                        <!--  android:background="@color/grey_300"-->

                        <TextView
                            android:id="@+id/tv_ar_restaurant_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_3sdp"
                            android:ellipsize="end"
                            android:fontFamily="@font/poppins_semi_bold"
                            android:maxLines="2"
                            android:textColor="@color/grey_900"
                            android:textSize="@dimen/_11sdp" />

                        <TextView
                            android:id="@+id/tv_ar_restaurant_sub_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:fontFamily="@font/poppins_regular"
                            android:maxLines="1"
                            android:textColor="@color/ar_sub_title_color"
                            android:textSize="@dimen/_9sdp" />

                        <!--
                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_weight="0.8"
                                        android:gravity="start|center"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal">

                                        <ImageView
                                            android:id="@+id/iv_home_delivery_time_image"
                                            android:layout_width="@dimen/_10sdp"
                                            android:layout_height="@dimen/_10sdp"
                                            android:layout_marginBottom="@dimen/_1sdp"
                                            android:background="@drawable/ic_timer_icon"
                                            android:contentDescription="@string/image"
                                            android:scaleType="fitXY" />

                                        <TextView
                                            android:id="@+id/tv_home_delivery_time"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginStart="@dimen/_3sdp"
                                            android:gravity="center|end"
                                            android:textColor="@color/home_bo_within_color"
                                            android:textSize="@dimen/_9sdp"
                                            android:fontFamily="@font/poppins_regular"/>


                                    </LinearLayout>
                        -->

                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginStart="@dimen/_2sdp"
                        android:layout_marginBottom="@dimen/_2sdp"
                        android:id="@+id/rating_linear"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginEnd="@dimen/_8sdp"
                        android:gravity="start|center"
                        android:orientation="horizontal">

                        <!-- <ImageView
                             android:layout_width="@dimen/_10sdp"
                             android:layout_height="@dimen/_10sdp"
                             android:layout_marginBottom="@dimen/_1sdp"
                             android:background="@drawable/baseline_grade_custom_18dp"
                             android:contentDescription="@string/image"
                             android:scaleType="fitXY" />-->

                        <ImageView
                            android:id="@+id/rating_img"
                            android:layout_width="@dimen/_19sdp"
                            android:layout_height="@dimen/_19sdp"
                            android:padding="@dimen/_2sdp"
                            android:src="@drawable/baseline_face_black_24dp" />

                        <TextView
                            android:id="@+id/tv_ar_rating_msg"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_3sdp"
                            android:layout_marginTop="@dimen/_1sdp"
                            android:fontFamily="@font/poppins_regular"
                            android:gravity="center"
                            android:textColor="@color/home_nb_delivery_time_text_color"
                            android:textSize="@dimen/_9sdp" />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lay_ar_restaurant_minimum_amount_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="start|center"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/_10sdp"
                            android:layout_height="@dimen/_10sdp"
                            android:layout_marginBottom="@dimen/_1sdp"
                            android:gravity="center"
                            android:background="@drawable/baseline_wallet_primary_24dp"
                            android:contentDescription="@string/image"/>

                        <TextView
                            android:id="@+id/tv_ar_minimum_amount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_3sdp"
                            android:fontFamily="@font/poppins_regular"
                            android:gravity="center"
                            android:textColor="@color/home_nb_delivery_time_text_color"
                            android:textSize="@dimen/_8sdp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/delivery_container"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="@dimen/_8sdp"
                        android:layout_marginRight="@dimen/_8sdp"
                        android:gravity="bottom"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/lay_ar_restaurant_delivery_amt_container"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="start|center"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="@dimen/_15sdp"
                                android:layout_height="@dimen/_15sdp"
                                android:layout_marginBottom="@dimen/_1sdp"
                                android:background="@drawable/ic_delivery_cost_108"
                                android:contentDescription="@string/image"
                                android:scaleType="fitXY" />

                            <TextView
                                android:id="@+id/tv_ar_delivery_amt_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_3sdp"
                                android:fontFamily="@font/poppins_regular"
                                android:gravity="start|center"
                                android:textColor="@color/home_nb_delivery_time_text_color"
                                android:textSize="@dimen/_8sdp" />

                            <TextView
                                android:id="@+id/tv_ar_delivery_amt_data"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_2sdp"
                                android:fontFamily="@font/poppins_semi_bold"
                                android:gravity="center"
                                android:textColor="@color/ar_delivery_amt_color"
                                android:textSize="@dimen/_8sdp" />


                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/lay_ar_restaurant_delivery_time_container"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.6"
                            android:gravity="end|center"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="@dimen/_10sdp"
                                android:layout_height="@dimen/_10sdp"
                                android:layout_marginBottom="@dimen/_1sdp"
                                android:background="@drawable/baseline_access_time_black_18dp"
                                android:contentDescription="@string/image"
                                android:scaleType="fitXY" />

                            <TextView
                                android:id="@+id/tv_ar_delivery_time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_3sdp"
                                android:fontFamily="@font/poppins_regular"
                                android:gravity="center"
                                android:textColor="@color/home_nb_delivery_time_text_color"
                                android:textSize="@dimen/_8sdp" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/pickup_container"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="@dimen/_8sdp"
                        android:layout_marginRight="@dimen/_8sdp"
                        android:gravity="bottom"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/_10sdp"
                            android:layout_height="@dimen/_10sdp"
                            android:layout_marginBottom="@dimen/_1sdp"
                            android:background="@drawable/baseline_access_time_black_18dp"
                            android:contentDescription="@string/image"
                            android:scaleType="fitXY" />

                        <TextView
                            android:id="@+id/tv_ar_pickup_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_3sdp"
                            android:fontFamily="@font/poppins_regular"
                            android:gravity="center"
                            android:textColor="@color/home_nb_delivery_time_text_color"
                            android:textSize="@dimen/_8sdp" />

                    </LinearLayout>

                    <!-- <TextView
                         android:id="@+id/tv_ar_restaurant_offers"
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:layout_marginStart="@dimen/_8sdp"
                         android:layout_marginLeft="@dimen/_8sdp"
                         android:layout_marginRight="@dimen/_8sdp"
                         android:layout_marginEnd="@dimen/_8sdp"
                         android:gravity="start|center"
                         android:textColor="@color/ar_restaurant_offers_text_color"
                         android:textSize="@dimen/_9sdp"
                         android:fontFamily="@font/poppins_semi_bold"/>-->


                </LinearLayout>

                <ImageView
                    android:id="@+id/favorite_icon"
                    android:src="@drawable/baseline_favorite_primary_color_24dp"
                    android:layout_margin="@dimen/_5sdp"
                    android:layout_gravity="end|center|top"
                    android:layout_width="@dimen/_18sdp"
                    android:layout_height="@dimen/_18sdp"/>

            </FrameLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/empty"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5" />

            <LinearLayout
                android:id="@+id/offer_linear"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/_7sdp"
                android:layout_marginEnd="@dimen/_8sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_weight="1"
                android:gravity="bottom"
                android:orientation="vertical">

                <View
                    android:id="@+id/img_ar_restaurant_offers_dot"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:layerType="software"
                    android:background="@color/grey_400" />

                <LinearLayout
                    android:layout_marginTop="@dimen/_2sdp"
                    android:id="@+id/lay_ar_restaurant_offers"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="start|center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/_12sdp"
                        android:layout_height="@dimen/_12sdp"
                        android:layout_marginBottom="@dimen/_1sdp"
                        android:background="@drawable/outline_local_offer_black_48dp"
                        android:contentDescription="@string/image"
                        android:rotation="90"
                        android:scaleType="fitXY" />

                    <TextView
                        android:id="@+id/tv_ar_restaurant_offers"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/_3sdp"
                        android:fontFamily="@font/poppins_semi_bold"
                        android:gravity="start|center"
                        android:textColor="@color/ar_restaurant_offers_text_color"
                        android:textSize="@dimen/_9sdp" />


                </LinearLayout>


            </LinearLayout>


        </LinearLayout>


    </LinearLayout>


</androidx.cardview.widget.CardView>
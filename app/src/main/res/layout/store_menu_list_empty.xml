<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layout_restaurant_menu_item_list_empty_message"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="top|center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_restaurant_menu_list_empty_image"
            android:layout_width="@dimen/_48sdp"
            android:layout_height="@dimen/_48sdp"
            android:layout_marginTop="@dimen/_12sdp"
            android:background="@drawable/ic_error_outline_black_48dp"
            android:contentDescription="@string/image" />


        <TextView
            android:fontFamily="@font/poppins_medium"
            android:id="@+id/tv_restaurant_menu_list_empty_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/_12sdp"
            android:text="@string/the_menu_item_list_empty"
            android:textColor="@color/text_color"
            android:textSize="@dimen/_13sdp" />


    </LinearLayout>


</LinearLayout>
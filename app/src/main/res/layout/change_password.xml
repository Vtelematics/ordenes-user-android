<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.ChangePassword">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_60sdp"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginStart="@dimen/_12sdp"
            android:layout_marginLeft="@dimen/_12sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginEnd="@dimen/_12sdp"
            android:layout_marginRight="@dimen/_12sdp"
            android:layout_marginBottom="@dimen/_6sdp"
            android:background="@color/white"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/img_cp_back"
                android:layout_width="@dimen/_24sdp"
                android:layout_height="@dimen/_24sdp"
                android:layout_gravity="center|start"
                android:gravity="center"
                android:background="@drawable/svg_arrow_back_48dp"
                android:scaleType="fitXY" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/poppins_bold"
                android:gravity="center"
                android:text="@string/change_password"
                android:textColor="@color/grey_900"
                android:textSize="@dimen/_12sdp" />

        </FrameLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lay_cp_old_pwd_parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_60sdp"
        android:orientation="vertical"
        android:visibility="visible"
        android:background="@color/white"
        android:layout_marginStart="@dimen/_16sdp"
        android:layout_marginLeft="@dimen/_16sdp"
        android:layout_marginEnd="@dimen/_16sdp"
        android:layout_marginRight="@dimen/_16sdp"
        android:layout_marginBottom="@dimen/_6sdp">


        <LinearLayout
            android:id="@+id/lay_cp_old_pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_6sdp"
                android:layout_weight="1"
                android:orientation="vertical">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/_12sdp"
                    app:hintTextColor="@color/app_login_hintTextColor_color"
                    app:passwordToggleEnabled="true">

                    <EditText
                        android:id="@+id/et_cp_old_pwd"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_24sdp"
                        android:background="@drawable/bg_no_background"
                        android:fontFamily="@font/poppins_regular"
                        android:textAlignment="viewStart"
                        android:hint="@string/old_password"
                        android:inputType="textPassword"
                        android:textColor="@color/ar_popular_offers_text_color"
                        android:textSize="@dimen/_11sdp" />
                </com.google.android.material.textfield.TextInputLayout>


            </LinearLayout>


        </LinearLayout>

        <View
            android:id="@+id/view_cp_old_pwd"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:layout_marginTop="@dimen/_4sdp"
            android:layout_marginBottom="@dimen/_4sdp"
            android:background="@color/ar_filter_horizontal_line_color" />


        <LinearLayout
            android:id="@+id/lay_cp_new_pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_6sdp"
                android:layout_weight="1"
                android:orientation="vertical">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/_12sdp"
                    app:hintTextColor="@color/app_login_hintTextColor_color"
                    app:passwordToggleEnabled="true">

                    <EditText
                        android:id="@+id/et_cp_new_pwd"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_24sdp"
                        android:background="@drawable/bg_no_background"
                        android:fontFamily="@font/poppins_regular"
                        android:textAlignment="viewStart"
                        android:hint="@string/new_password"
                        android:inputType="textPassword"
                        android:textColor="@color/ar_popular_offers_text_color"
                        android:textSize="@dimen/_11sdp" />
                </com.google.android.material.textfield.TextInputLayout>


            </LinearLayout>


        </LinearLayout>

        <View
            android:id="@+id/view_cp_new_pwd"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:layout_marginTop="@dimen/_4sdp"
            android:layout_marginBottom="@dimen/_4sdp"
            android:background="@color/ar_filter_horizontal_line_color" />

        <LinearLayout
            android:id="@+id/lay_cp_confirm_pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_6sdp"
                android:layout_weight="1"
                android:orientation="vertical">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/_12sdp"
                    app:hintTextColor="@color/app_login_hintTextColor_color"
                    app:passwordToggleEnabled="true">

                    <EditText
                        android:id="@+id/et_cp_confirm_pwd"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_24sdp"
                        android:background="@drawable/bg_no_background"
                        android:fontFamily="@font/poppins_regular"
                        android:textAlignment="viewStart"
                        android:hint="@string/confirm_pwd"
                        android:inputType="textPassword"
                        android:textColor="@color/ar_popular_offers_text_color"
                        android:textSize="@dimen/_11sdp" />
                </com.google.android.material.textfield.TextInputLayout>


            </LinearLayout>


        </LinearLayout>

        <View
            android:id="@+id/view_cp_confirm_pwd"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:layout_marginTop="@dimen/_4sdp"
            android:layout_marginBottom="@dimen/_4sdp"
            android:background="@color/ar_filter_horizontal_line_color" />

        <LinearLayout
            android:id="@+id/lay_cp_submit_btn_container"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginTop="@dimen/_30sdp"
            android:background="@drawable/bg_ar_filter_apply"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_cp_submit_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:text="@string/submit"
                android:textColor="@color/white"
                android:textSize="@dimen/_13sdp" />


        </LinearLayout>

    </LinearLayout>



</FrameLayout>
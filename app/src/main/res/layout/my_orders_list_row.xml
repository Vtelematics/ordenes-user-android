<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/lay_mol_row"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_marginBottom="@dimen/_8sdp"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5">

            <LinearLayout
                android:layout_width="@dimen/_80sdp"
                android:layout_height="@dimen/_80sdp"
                android:layout_gravity="center"
                android:layout_margin="@dimen/_4sdp"
                android:background="@drawable/bg_nb_image"
                app:cardCornerRadius="@dimen/_8sdp">

                <ImageView
                    android:id="@+id/iv_mol_restaurant_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/_8sdp"
                    android:contentDescription="@string/image"
                    android:scaleType="center" />


            </LinearLayout>


        </FrameLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_marginEnd="@dimen/_8sdp"
                android:gravity="start|center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_mol_restaurant_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:ellipsize="end"
                    android:fontFamily="@font/poppins_semi_bold"
                    android:gravity="center|start"
                    android:maxLines="2"
                    android:textColor="@color/grey_900"
                    android:textSize="@dimen/_11sdp" />

                <TextView
                    android:id="@+id/tv_mol_order_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_semi_bold"
                    android:gravity="center|start"
                    android:maxLines="1"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/_9sdp" />

                <TextView
                    android:id="@+id/tv_mol_order_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_regular"
                    android:gravity="center|start"
                    android:maxLines="1"
                    android:textColor="@color/ar_sub_title_color"
                    android:textSize="@dimen/_9sdp" />

                <TextView
                    android:id="@+id/tv_mol_order_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_regular"
                    android:gravity="center|start"
                    android:maxLines="1"
                    android:textColor="@color/ar_sub_title_color"
                    android:textSize="@dimen/_9sdp" />

                <TextView
                    android:id="@+id/tv_mol_order_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_regular"
                    android:gravity="center|start"
                    android:maxLines="1"
                    android:textColor="@color/ar_sub_title_color"
                    android:textSize="@dimen/_9sdp" />

            </LinearLayout>


        </LinearLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="@dimen/_3sdp"
                android:gravity="center">

                <ImageView
                    android:id="@+id/iv_mol_go_to_order_info_image"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:background="@drawable/svg_keyboard_arrow_right_24dp"
                    android:contentDescription="@string/image"
                    android:scaleType="fitXY" />


            </LinearLayout>


        </FrameLayout>


    </LinearLayout>


</LinearLayout>





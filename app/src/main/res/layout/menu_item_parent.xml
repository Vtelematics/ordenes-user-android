<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lay_restaurant_menu_item_parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img_menu_list_parent_image"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:scaleType="fitXY"
        android:layout_gravity="start|center"

        android:contentDescription="@string/app_name" />
    <!-- android:background="@drawable/restaurant_list_banner"-->


    <LinearLayout
        android:id="@+id/layout_menu_list_parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start|center"
        android:orientation="horizontal">

        <TextView
            android:fontFamily="@font/poppins_medium"
            android:id="@+id/tv_menu_list_parent_item_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_weight="1"
            android:gravity="start|center"
            android:text="Rasagulla"
            android:textColor="@color/text_color"
            android:textSize="@dimen/_21sdp" />

        <LinearLayout
            android:id="@+id/layout_menu_list_parent_all_menu"
            android:layout_width="0dp"
            android:layout_weight="0.2"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:gravity="center|end"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_menu_list_parent_all_menu"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_gravity="start|center"
                android:background="@drawable/baseline_event_note_black_24dp"
                android:contentDescription="@string/app_name" />

        </LinearLayout>

    </LinearLayout>

    <View
        android:id="@+id/view_menu_list_parent"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:background="@color/grey_400"/>

</LinearLayout>
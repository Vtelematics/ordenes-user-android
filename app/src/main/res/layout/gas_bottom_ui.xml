<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_gas_grocery_stores_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fontFamily="@font/poppins_semi_bold"
        android:gravity="start|center"
        android:layout_marginTop="@dimen/_12sdp"
        android:layout_marginStart="@dimen/_2sdp"
        android:layout_marginLeft="@dimen/_2sdp"
        android:layout_marginRight="@dimen/_2sdp"
        android:layout_marginEnd="@dimen/_2sdp"
        android:text="@string/gas_grocery_stores"
        android:textColor="@color/ar_filter_title_text_color"
        android:textSize="@dimen/_12sdp"
        android:visibility="visible"/>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nested_view_gas_grocery_stores_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/_4sdp"
        android:layout_marginBottom="@dimen/_12sdp"
        android:fillViewport="true">

        <androidx.recyclerview.widget.RecyclerView
            android:nestedScrollingEnabled="false"
            android:id="@+id/recycler_gas_grocery_stores_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:visibility="visible"/>

    </androidx.core.widget.NestedScrollView>




</LinearLayout>
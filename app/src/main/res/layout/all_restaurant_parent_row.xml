<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingStart="@dimen/_5sdp"
    android:paddingEnd="@dimen/_5sdp">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_ar_filter_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_marginBottom="@dimen/_8sdp"
        android:background="@color/white" />

    <TextView
        android:id="@+id/tv_ar_popular_offer_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/popular_offers"
        android:paddingLeft="@dimen/_4sdp"
        android:paddingStart="@dimen/_4sdp"
        android:paddingRight="@dimen/_4sdp"
        android:paddingEnd="@dimen/_4sdp"
        android:paddingTop="@dimen/_2sdp"
        android:paddingBottom="@dimen/_2sdp"
        android:textAllCaps="false"
        android:textColor="@color/ar_popular_offers_text_color"
        android:textSize="@dimen/_13sdp"
        android:fontFamily="@font/poppins_bold"/>
    <!--  android:text="@string/popular_offers"-->

    <LinearLayout
        android:id="@+id/layout_ar_banner_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_4sdp"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_160sdp"
            android:layout_margin="@dimen/_3sdp"
            app:cardCornerRadius="@dimen/_8sdp"
            android:layout_gravity="top">

            <androidx.viewpager.widget.ViewPager
                android:id="@+id/view_pager_ar_banner_slider"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/grey_800"/>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/layout_ar_banner_slider_buttons"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_16sdp"
            android:layout_gravity="bottom"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="@dimen/_5sdp" />


    </LinearLayout>

    <TextView
        android:id="@+id/tv_ar_all_restaurants_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_bold"
        android:paddingStart="@dimen/_4sdp"
        android:paddingLeft="@dimen/_4sdp"
        android:paddingTop="@dimen/_2sdp"
        android:paddingEnd="@dimen/_4sdp"
        android:paddingRight="@dimen/_4sdp"
        android:paddingBottom="@dimen/_2sdp"
        android:text="@string/all_vendors"
        android:textAllCaps="false"
        android:textColor="@color/ar_popular_offers_text_color"
        android:textSize="@dimen/_13sdp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_ar_vendor_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/_4sdp"
        android:layout_marginBottom="@dimen/_4sdp"
        android:background="@color/white" />

    <TextView
        android:id="@+id/tv_ar_vendor_list_empty"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_80sdp"
        android:fontFamily="@font/poppins_semi_bold"
        android:paddingStart="@dimen/_4sdp"
        android:paddingLeft="@dimen/_4sdp"
        android:paddingTop="@dimen/_2sdp"
        android:paddingEnd="@dimen/_4sdp"
        android:paddingRight="@dimen/_4sdp"
        android:paddingBottom="@dimen/_2sdp"
        android:layout_marginTop="@dimen/_4sdp"
        android:layout_marginBottom="@dimen/_4sdp"
        android:gravity="center"
        android:text="@string/ar_vendor_lst_empty_msg"
        android:textColor="@color/ar_filter_title_text_color"
        android:textSize="@dimen/_12sdp"
        android:visibility="gone"/>


</LinearLayout>